    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
    {#<link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="screen,handheld,print" />#}
    {% stylesheets '@AppBundle/Resources/public/css/frontend/*' %}
         <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <title>{% block title %}Louis Perrichet - Photographie{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
    {#{% set canonical = app.request.attributes.get('_route') %}#}
    {#<link rel="canonical" href="{{ url(canonical) }}" />#}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    <section id="container">
        <section id="menu">
            <span style="text-transform:uppercase;font-size:10px;">Louis Perrichet <span style="color:#888383;">Photographie</span></span>
            <div id="menu-content">
                <ul>
                    <li class="active"><a href="#">Home</a></li>
                    {% for gallery in galleries %}
                        <li><a href="{{ path('frontend_gallery', { 'route': gallery.route })  }}">{{ gallery.name }}</a></li>
                    {% endfor %}
                    <li><a href="{{ path('frontend_contact') }}">Contact</a></li>
                </ul>
            </div>
        </section>
        {% block body %}{% endblock %}
    </section>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="{{ asset('js/modernizr.js') }}"></script>
    <script src="{{ asset('js/validator.min.js') }}" type="text/javascript"></script>
    <!--[if lt IE 9]>
        <script src="web/js/html5shiv.js" type="text/javascript"></script>
        <script src="web/js/respond.min.js" type="text/javascript"></script>
    <![endif]-->
    <!--[if lte IE 8]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    {% javascripts '@AppBundle/Resources/public/js/frontend/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
    var margin = ($( window ).height() - 665) / 2;
    $("#container").css("margin-top", margin);
    
    $( window ).resize(function() {
        var margin = ($( window ).height() - 665) / 2;
        $("#container").css("margin-top", margin);    
    });
    </script>
    {% block javascripts %}{% endblock %}
</body>
